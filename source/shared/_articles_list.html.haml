%article.articles-list
  - page_articles.each_with_index do |article, i|
    .entry
      .info
        %h4= link_to article.title, article

        .announce= article.metadata[:page]['announce']

        %span.comments
          =link_to  "Нет комментариев", "#{disqus_url(article)}#disqus_thread", class: old_article?(article) && "old"
      .date
        = Russian::strftime(article.date, '%d %b %Y')


.pagination
  - if paginate && num_pages > 1
    - if prev_page
      = link_to 'Предыдущая страница', prev_page, nil, class: 'prev'
    - else
      .prev

  - if paginate
    - if next_page
      = link_to 'Следующая страница', next_page, nil, class: 'next'
    - else
      .next
